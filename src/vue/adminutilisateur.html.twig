{% block contenu %}


<div class="textcenter" style="max-width:700px;  display: block;
            margin-left: auto;
            margin-right: auto;">
            <h3 id="borderTitre" style="padding:1em 2em; margin-top:0em">Liste des utilisateur de Légendarium</h3>
          </div>
      <!--   <div class="table-responsive">
     <form action="index.php?page=" method="post" enctype="application/x-www-form-urlencoded">
