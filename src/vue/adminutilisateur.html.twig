          <table class="table">
            <thead class="thead-color">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">DateCréa</th>
                <th scope="col">Rôle</th>
                <th scope="col">Edit</th>
                <th scope="col">Trash</th>
              </tr>
            </thead>
            <tbody>
              {% for u in liste %}

                  <tr id="tr">
                    <th scope="row">#</th>
                    <td>{{ u.nom }}</td>
                    <td>{{ u.prenom }}</td>
                    <td>{{ u.email }}</td>
                    <td>{{ u.dateCrea }}</td>
                    {% if u.id == 1 %}
                    <td>Administrateur</td>
                    {% else %}
                    <td>Client</td>
                    {% endif %}
                    <td>
                      <a href="#">
                        <i class="fas fa-edit icon"></i>
                      </a>
                    </td>
                    <td>
                      <a href="#">
                        <i class="fas fa-trash icon"></i>
                      </a>
                      <!-- <label class="checkbox">
                        <input type="checkbox" name="cocher[]" id="cocher[]" value="1"/>
                        <span class="default"></span>
                      </label> -->
                    </td>
                  </tr>

              {% endfor %}

            </tbody>

          </table>
